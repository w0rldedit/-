{
    "pages": [
        "pages/index/index",
        "pages/login/login",
        "pages/submit/submit",
        "pages/userinfo/userinfo",
        "pages/clothesrec/clothesrec",
        "pages/foodrec/foodrec",
        "pages/roomrec/roomrec",
        "pages/trafficrec/trafficrec",
        "pages/record/record",
        "pages/register/register",
        "pages/logs/logs"
    ],
    "window": {
        "backgroundTextStyle": "light",
        "navigationBarBackgroundColor": "#1bd1a5",
        "navigationBarTitleText": "我记碳足迹",
        "navigationBarTextStyle": "black"
    },
    "tabBar": {
        "color": "#464158",
        "selectedColor": "#0eDCC6",
        "borderStyle": "white",
        "backgroundColor": "#FFFFFF",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "image/tabbar_image/主页unsel.png",
                "selectedIconPath": "image/tabbar_image/主页sel.png",
                "text": "首页"
            },
            {
                "pagePath": "pages/record/record",
                "iconPath": "image/tabbar_image/记录unsel.png",
                "selectedIconPath": "image/tabbar_image/记录sel.png",
                "text": "记录"
            },
            {
                "pagePath": "pages/userinfo/userinfo",
                "iconPath": "image/tabbar_image/用户unsel.png",
                "selectedIconPath": "image/tabbar_image/用户sel.png",
                "text": "我的"
            }
        ]
    },
    "permission": {
        "pages": [
            "pages/index/index"
        ],
        "permission": {
            "scope.userLocation": {
                "desc": "你的位置信息将用于小程序位置接口的效果展示"
            }
        }
    },
    "debug": true,
    "style": "v2",
    "useExtendedLib": {
        "weui": true
    },
    "sitemapLocation": "sitemap.json",
    "lazyCodeLoading": "requiredComponents",
    "usingComponents": {
        "van-button": "@vant/weapp/button/index",
        "van-field": "@vant/weapp/field/index",
        "van-cell": "@vant/weapp/cell/index",
        "van-cell-group": "@vant/weapp/cell-group/index",
        "van-icon": "@vant/weapp/icon/index",
        "van-grid": "@vant/weapp/grid/index",
        "van-grid-item": "@vant/weapp/grid-item/index",
        "van-tab": "@vant/weapp/tab/index",
        "van-tabs": "@vant/weapp/tabs/index",
        "van-tabbar": "@vant/weapp/tabbar/index",
        "van-tabbar-item": "@vant/weapp/tabbar-item/index",
        "van-calendar": "@vant/weapp/calendar/index",
        "van-row": "@vant/weapp/row/index",
        "van-col": "@vant/weapp/col/index",
        "van-divider": "@vant/weapp/divider/index",
        "van-tag": "@vant/weapp/tag/index",
        "van-steps": "@vant/weapp/steps/index",
        "van-stepper": "@vant/weapp/stepper/index",
        "van-notice-bar": "@vant/weapp/notice-bar/index",
        "van-count-down": "@vant/weapp/count-down/index",
        "van-collapse": "@vant/weapp/collapse/index",
        "van-collapse-item": "@vant/weapp/collapse-item/index",
        "van-image": "@vant/weapp/image/index",
        "van-popup": "@vant/weapp/popup/index"
    }
}